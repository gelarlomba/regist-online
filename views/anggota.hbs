    <link rel="stylesheet" href="https://cdn.datatables.net/select/1.3.0/css/select.dataTables.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.1/css/bootstrap.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.5.2/css/buttons.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.bootstrap4.min.css">
    {{!-- eof dataTables --}}
    <link rel="stylesheet" type="text/css" media="screen" href="css/header.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="css/body.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="css/footer.css" />
    <link href="https://fonts.googleapis.com/css?family=Lobster|Roboto" rel="stylesheet">
    <link rel="shorcut icon" href="images/gelora.png">
    <script src="app.js"></script>
</head>

<body id="background-home">
    <nav class="container navbar navbar-light mb-5">
        <div class="d-inline col-md-1 col-sm-1 mt-5"><img src="images/gelora.png" width="90" height="90"
                class="d-inline-block align-top" alt=""></div>
        <div class="d-inline col-md col-sm ml-5 mt-5">
            <h1>Daftar Anggota</h1>
        </div>
        <form action="/">
            <button type="submit" id="submit" class="btn btn-danger mt-5">Kembali</button>
        </form>
    </nav>

    <div class="container">
        <table id="table_id" class="text-center table table-striped table-bordered dt-responsive wrap">
            <thead>
                <tr>
                    <th>Nama Lengkap</th>
                    <th>Asal SMP</th>
                    <th>Nomor HP</th>
                    <th>Alamat</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td><a href="/detail/{{namaLengkap}}"><b>{{namaLengkap}}</a></b></td>
                    <input style="display:none" name="index" value="{{@index}}">
                    <input style="display:none" name="namaLengkap" value="{{namaLengkap}}">
                    <td><b>{{smp}}</b></td>
                    <td><b>{{noHp}}</b></td>
                    <td><b>{{alamat}}</b></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</body>
<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
